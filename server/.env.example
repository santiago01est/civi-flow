# CORS Settings
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Azure OpenAI Configuration (Optional - uses mock data if not configured)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=
